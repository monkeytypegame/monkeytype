{
  "name": "@monkeytype/util",
  "scripts": {
    "dev": "tsup-node --watch",
    "build": "npm run madge && tsup-node",
    "test": "vitest run",
    "madge": " madge --circular --extensions ts ./src",
    "ts-check": "tsc --noEmit",
    "oxlint": "oxlint . --type-aware",
    "lint": "npm run oxlint"
  },
  "devDependencies": {
    "@monkeytype/tsup-config": "workspace:*",
    "@monkeytype/typescript-config": "workspace:*",
    "madge": "8.0.0",
    "oxlint": "1.30.0",
    "oxlint-tsgolint": "0.8.2",
    "tsup": "8.4.0",
    "typescript": "5.9.3",
    "vitest": "4.0.8",
    "zod": "3.23.8"
  },
  "exports": {
    "./*": {
      "types": "./src/*.ts",
      "import": "./dist/*.mjs",
      "require": "./dist/*.js"
    }
  }
}
