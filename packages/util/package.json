{
  "name": "@monkeytype/util",
  "exports": {
    "./*": {
      "types": "./src/*.ts",
      "import": "./dist/*.mjs",
      "require": "./dist/*.js"
    }
  },
  "scripts": {
    "dev": "tsup-node --watch",
    "build": "npm run madge && tsup-node",
    "test": "vitest run",
    "madge": " madge --circular --extensions ts ./src",
    "ts-check": "tsc --noEmit",
    "lint": "oxlint . --type-aware --type-check",
    "lint-fast": "oxlint ."
  },
  "devDependencies": {
    "@monkeytype/tsup-config": "workspace:*",
    "@monkeytype/typescript-config": "workspace:*",
    "madge": "8.0.0",
    "oxlint": "1.43.0",
    "oxlint-tsgolint": "0.11.4",
    "tsup": "8.4.0",
    "typescript": "5.9.3",
    "vitest": "4.0.15",
    "zod": "3.23.8"
  }
}
