{
  "categories": {
    "correctness": "error",
    "suspicious": "error",
    "perf": "error"
  },
  "rules": {
    "no-unused-vars": [
      "warn",
      {
        "argsIgnorePattern": "^(_|e|event)",
        "caughtErrorsIgnorePattern": "^(_|e|error)",
        "varsIgnorePattern": "^_"
      }
    ],
    "no-await-in-loop": "allow",
    "consistent-function-scoping": "off",
    "prefer-add-event-listener": "off",
    "no-unsafe-optional-chaining": "off"
  }
}
