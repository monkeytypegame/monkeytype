{
  "extends": "@monkeytype/typescript-config/base.json",
  "compilerOptions": {
    "outDir": "build",
    "target": "ES6",
    "noImplicitAny": false,
    "strictFunctionTypes": false,
    "useUnknownInCatchVariables": false,
    "strictPropertyInitialization": false,

    "paths": {
      "@shared/*": ["../shared-types/*"]
    }
  },
  "ts-node": {
    "files": true
  },
  "files": ["./src/types/types.d.ts"],
  "include": ["./src/**/*"],
  "exclude": [
    "node_modules",
    "build",
    "worker.js",
    "setup-tests.ts",
    "**/*.spec.ts"
  ]
}
