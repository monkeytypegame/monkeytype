{
  "$schema": "https://raw.githubusercontent.com/oxc-project/oxc/refs/heads/main/npm/oxfmt/configuration_schema.json",
  "printWidth": 80,
  "tabWidth": 2,
  "useTabs": false,
  "htmlWhitespaceSensitivity": "ignore",
  "endOfLine": "lf",
  "trailingComma": "all",
  "ignorePatterns": [
    ".turbo",
    "node_modules",
    "pnpm-lock.yaml",
    "logs",
    "coverage",
    "*.md"
  ]
}
